$(document).ready(function(){

$(document).on("click", "#generate_code", function(){
	code_count = $("#code_count").val();
	console.log("code_count", code_count);
	$.ajax({
		url: "secret_codes/generate_code",
		contentType: "application/json; charset=utf-8",
		data : ({
			"code_count": code_count
		}),
		success: function (result) {}
    });


});

$(document).on("click", ".assign_email_to_code",function(){
	var email = $(this).prev('input').val();
	var code = $($(this)).closest('td').prev('td').text();
	$.ajax({
		url: "secret_codes/assign_email_to_code",
		contentType: "application/json; charset=utf-8",
		data : ({
			"email": email,
			"code": code
		}),
		success: function (result) {}
    });
});


});